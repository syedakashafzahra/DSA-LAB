/*#include <iostream>
using namespace std;

int Power(int X, int N) {
    if (N == 0)
        return 1;
    else
        return Power(X, N - 1) * X;
}

int main() {
    cout << "2^5 = " << Power(2, 5) << endl;
    return 0;
}

*/
/*#include <iostream>
using namespace std;

int Ackermann(int m, int n) {
    if (m == 0)
        return n + 1;
    else if (m > 0 && n == 0)
        return Ackermann(m - 1, 1);
    else if (m > 0 && n > 0)
        return Ackermann(m - 1, Ackermann(m, n - 1));
}

int main() {
    cout << "Ackermann(3,4) = " << Ackermann(3, 4) << endl;
    return 0;
}
*/
/*#include <iostream>
